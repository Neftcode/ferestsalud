<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximun-scale=1, minimun-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie-edge">
        <title>{% block title %}Ferest Salud{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
            <link rel="stylesheet" href="{{ asset('css/alert_notify/alertify.css') }}">
            <link rel="stylesheet" href="{{ asset('css/alert_notify/themes_default.css') }}">
            <link rel="stylesheet" href="{{ asset('css/viewer/main.css') }}">
            <link rel="stylesheet" href="{{ asset('css/viewer/viewer.css') }}">
            <link rel="stylesheet" href="{{ asset('fonts/css/all.min.css') }}">
            <link rel="shortcut icon" type="image/icon" href="{{ asset('images/favicon.ico') }}"><!-- Favicon-->
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="menu-bar">
                <div class="menu-bar-boton">
                    <span class="fas fa-bars menu_icon"></span>
                </div>
                <a href="{{ path('dashboard') }}" class="home">
                    <img src="{{ asset('images/logo.png') }}" class="logo_home">
                </a>
                <p class="titulo_header">{{ controller_name }}</p>
                <a href="{{ path('app_logout') }}" class="menu_configuracion" id="tour-11">
                    <span class="fas fa-power-off"></span>
                </a>
                <a href="javascript:;" class="menu_configuracion" id="tour-10">
                    <span class="fas fa-user"></span>
                </a>
                <a href="javascript:;" class="menu_configuracion" id="tour-9">
                    <span class="fas fa-info-circle"></span>
                </a>
            </header>
        {% endblock %}
        {% block sidebar %}
            <div class="sidebar">
                <h2 class="m-0">Menú Principal</h2>
                <div class="menu_configuracion_lateral"><a href="{{ path('app_logout') }}" class="menu_conf_lateral" id="tour-6"><span class="fas fa-power-off"></span></a><a href="javascript:;" class="menu_conf_lateral" id="tour-5"><span class="fas fa-user"></span></a><a href="javascript:;" class="menu_conf_lateral" id="tour-4"><span class="fas fa-info-circle"></span></a></div>
                <ul>
                    <li class="submenu">
                        <a href="{{ path('dashboard') }}">
                            <div class="opcion_icon">
                                <span class="fas fa-chart-pie"></span>
                            </div>
                            <p class="texto_menu">Dashboard</p>
                        </a>
                    </li>
                    {% if "recepcion" in permisos|keys %}
                    <li class="submenu">
                        <a href="javascript:;">
                            <div class="opcion_icon">
                                <span class="fas fa-user-check"></span>
                            </div>
                            <p class="texto_menu">{{permisos.recepcion.modNombre}}
                                {# <span class="fas fa-chevron-down submenu_icon"></span> #}
                            </p>
                        </a>
                        {# <ul>
                            <li>
                                <a href="javascript:;">
                                    <div class="opcion_icon">
                                        <span class="fas fa-phone-volume"></span>
                                    </div>
                                    <p class="texto_menu">Nombre</p>
                                </a>
                            </li>
                        </ul> #}
                    </li>
                    {% endif %}
                    {% if "farmacia" in permisos|keys %}
                    <li class="submenu">
                        <a href="javascript:;">
                            <div class="opcion_icon">
                                <span class="fas fa-medkit"></span>
                            </div>
                            <p class="texto_menu">{{permisos.farmacia.modNombre}}
                                <span class="fas fa-chevron-down submenu_icon"></span>
                            </p>
                        </a>
                        <ul>
                            {% if "farmacia_venta" in permisos|keys %}
                            <li>
                                <a href="javascript:;">
                                    <div class="opcion_icon">
                                        <span class="fas fa-cash-register"></span>
                                    </div>
                                    <p class="texto_menu">{{permisos.farmacia_venta.modNombre}}</p>
                                </a>
                            </li>
                            {% endif %}
                            {% if "farmacia_inventario" in permisos|keys %}
                            <li>
                                <a href="javascript:;">
                                    <div class="opcion_icon">
                                        <span class="fas fa-boxes"></span>
                                    </div>
                                    <p class="texto_menu">{{permisos.farmacia_inventario.modNombre}}</p>
                                </a>
                            </li>
                            {% endif %}
                        </ul>
                    </li>
                    {% endif %}
                    {% if "configuraciones" in permisos|keys %}
                    <li class="submenu">
                        <a href="{{ path('registro_configuracion') }}">
                            <div class="opcion_icon">
                                <span class="fas fa-cogs"></span>
                            </div>
                            <p class="texto_menu">{{permisos.configuraciones.modNombre}}</p>
                        </a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        {% endblock %}
        <div class="contenido">
            {% block body %}
                <div class="row justify-content-center h-75">
                    <div class="col-md-6 d-flex align-items-center">
                        <img src="{{ asset('images/ferestIPS.png') }}" alt="Ferest Salud IPS" class="w-100">
                    </div>
                </div>
            {% endblock %}
        </div>
        {% block footer %}
            <footer>
                <div class="footer_contenido">
                    <div class="col-md-12 text-center">
                        <p>Ferest Salud IPS powered by <b>Neftcode ©</b> | Bienvenid{% if app.user.genero %}{% if app.user.genero.nombre=="Femenino" %}a{% else %}o{% endif %}{% else %}o(a){% endif %}, {{ app.user.nombres }} {{ app.user.apellidos }}</p>
                    </div>
                </div>
            </footer>
            <hr id="final_contenido">
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-3.5.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/jquery-ui.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/popper.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/menu-abrir.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/alert_notify/alertify.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/viewer/viewer.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/console.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/functions_index.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/moment.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/reload.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/security.js') }}"></script>
        {% endblock %}
    </body>
</html>
